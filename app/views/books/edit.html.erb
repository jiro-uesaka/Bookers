<div class="edit">
  <h1 class="edit_heading">Book Edit</h1>
  
  <% if @book.errors.any? %>
    <div class="edit_errors">
      <p><%= @book.errors.count %> error</p>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form_with model: @book do |b| %>

  <h4>Title</h4>
  <%= b.text_field :title %>
  
  <h4>Body</h4>
  <%= b.text_area :body %>
   
  <p><%= b.submit"Update Book" %></p>
  
  <% end %>
  <p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>
</div>