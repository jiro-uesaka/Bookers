<div class="books">
    <h1 class="books_heading">Books</h1>

<!--Books部分-->
    <div class="books_index">
        <table>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th colspan="3"></th>
            </tr>
            <tr>
                <% @books.each do |book| %>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                    <td><%= link_to "Show", book_path(book.id) %></td>
                    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure ?" %>></td>
                <% end %>
            </tr>
        </table>
    </div>

<!--New Book部分-->
    <div class="books_new">
        <h2>New Book</h2>
        <%= form_with model: @book do |b| %>
            <h4>Title</h4>
            <%= b.text_field :title %>
            <h4>Body</h4>
            <%= b.text_area :body %>
            <%= b.submit "Create Book" %>
        <% end %>
    <!--Error部分-->
        
    </div>
    
</div>
