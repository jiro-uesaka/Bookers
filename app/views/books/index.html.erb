<div class="index">
    <h1 class="index_heading">Books</h1>
    <div>
        <%= flash[:notice] %>
    </div>
<!--Books部分-->
    <div class="index_table">
        <table>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th colspan="3"></th>
            </tr>
            <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", book_path(book.id) %></td>
                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure ?" %></td>
            </tr>
            <% end %>
        </table>
    </div>

<!--New Book部分-->
    <div class="index_form">
        <h2 class="index_heading">New Book</h2>
        
        <% if @book.errors.any? %>
            <div class="index_errors">
                <p><%= @book.errors.count %> error</p>
                <ul>
                <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
                </ul>
            </div>
        <% end %>
        
        <%= form_with model: @book do |b| %>
            <h4>Title</h4>
            <%= b.text_field :title %>
            <h4>Body</h4>
            <%= b.text_area :body %>
            <div class="index_submit"><%= b.submit "Create Book" %></div>
        <% end %>
        
    </div>
    
</div>
